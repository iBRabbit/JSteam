<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/profile_icon" />

        <GridLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="4">

            <TextView
                android:id="@+id/profileUsernameLabelTextView"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Name\t\t\t\t\t\t\t\t\t\t\t:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileUsernameTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Username"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileEmailLabelTextView"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Email\t\t\t\t\t\t\t\t\t\t\t\t:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileEmailTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profilePhoneLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Phone Number\t\t:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profilePhoneTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Phone Number"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileRegionLabelTextView"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Region\t\t\t\t\t\t\t\t\t\t:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileRegionTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="Region"
                android:textSize="18sp" />

        </GridLayout>

        <Button
            android:id="@+id/profileLogoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/danger"
            android:text="LOGOUT" />

    </LinearLayout>

</FrameLayout>